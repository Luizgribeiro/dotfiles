syntax enable

"remap de atalhos CTRL:

	"remap function save
    "not recursive 
	nnoremap <c-s> :w<CR> 
	"insert mode nao recursivo
	inoremap <c-s> <Esc>:w<CR>l
	"visual mode nao recursivo
	vnoremap <c-s> <Esc>:w<CR>

	"remap save-quit
	"normal mode 
	nnoremap <c-q> :wq<CR>
	"insert mode
	inoremap <c-q> <Esc>:wq<CR>l
	"visual mode
	vnoremap <c-q> <Esc>:wq<CR>

	"remap unsave-quit
	"normal mode 
	nnoremap <c-u> :q!<CR>
	"insert mode
	inoremap <c-u> <Esc>:q!<CR>l
	"visual mode
	vnoremap <c-u> <Esc>:q!<CR>


	"remap ctrl z--> undo
	"normal mode
	nnoremap <c-z> :u<CR>
	"insert mode
	inoremap <c-z> <Esc>:u<CR>l
	"visual mode
	vnoremap <c-z> <Esc>:u<CR>


"remap de teclas basicas	
	"remap de setas
	nnoremap <Down> <nop>
	nnoremap <Up> <nop>
	nnoremap <Left> <nop>
	nnoremap <Right> <nop>

	"remapeando esc
	inoremap <esc> <nop>
	inoremap jk <esc>


"edicao do vimrc
	"abrir vimrc
	nnoremap <leader>ev :vsplit $MYVIMRC<cr>
	"save vimrc
	nnoremap <leader>sv :source $MYVIMRC<cr>

